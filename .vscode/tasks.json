{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ (MSVC)",
      "type": "shell",
      "command": "cl",
      "args": ["/std:c++17", "/EHsc", "*.cpp", "/Fe:app.exe"],
